generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String?
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  rssGenerators RssGenerator[]
  executeTasks  ExecuteTask[]
  bundles       Bundle[]
}

model RssGenerator {
    id            String        @id @default(uuid())
    type          String
    website       String
    title         String
    link          String?
    description   String?
    image         String?
    author        String?
    keywords      String?
    selector      String?
    createdAt     DateTime      @default(now())
    updatedAt     DateTime?     @updatedAt
    lastExecuteAt DateTime?
    frequency     String?       @default("daily")
    userId        String?
    user          User?         @relation(fields: [userId], references: [id])
    bundleId      String?
    bundle        Bundle?       @relation(fields: [bundleId], references: [id])
    tasks         ExecuteTask[]
    feed          Feed[]
}

model Feed {
    id          String       @id @default(uuid())
    title       String
    link        String
    image       String?
    description String?
    pubDate     DateTime?
    author      String?
    domain      String?
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
    rssId       String
    rss         RssGenerator @relation(fields: [rssId], references: [id], onDelete: Cascade)
}

model ExecuteTask {
    id             String        @id @default(uuid())
    status         String
    createAt       DateTime      @default(now())
    count          Int
    rssGeneratorId String?
    rssGenerator   RssGenerator? @relation(fields: [rssGeneratorId], references: [id])
    isRead         Boolean
    errorReason    String?
    userId         String?
    user           User?         @relation(fields: [userId], references: [id])
}

model Bundle {
    id            String         @id @default(uuid())
    title         String
    description   String?
    userId        String
    pinned        Boolean        @default(false)
    user          User           @relation(fields: [userId], references: [id])
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    rssGenerators RssGenerator[]
}

